{
  "compilerOptions": {
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "preserveSymlinks": true,
    "moduleResolution": "bundler"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.js"]
}
